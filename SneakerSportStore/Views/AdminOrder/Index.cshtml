@model List<SneakerSportStore.Models.Order>

<h2>Quản lý đơn hàng</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Không có đơn hàng nào.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Tên khách hàng</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.CustomerName</td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("Details", "AdminOrder", new { id = order.OrderId })" class="btn btn-info">Xem chi tiết</a>

                        <!-- Cập nhật trạng thái đơn hàng -->
                        @if (order.Status == "Chờ xác nhận")
                        {
                            <form method="post" action="@Url.Action("UpdateOrderStatus", new { id = order.OrderId, status = "Xác nhận" })">
                                <button type="submit" class="btn btn-success">Xác nhận</button>
                            </form>
                        }
                        @if (order.Status == "Xác nhận")
                        {
                            <form method="post" action="@Url.Action("UpdateOrderStatus", new { id = order.OrderId, status = "Đang chuẩn bị" })">
                                <button type="submit" class="btn btn-warning">Đang chuẩn bị</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
