﻿@model List<SneakerSportStore.Models.CartItem>

<h2>Giỏ Hàng</h2>
<style>
    body {
        background: #f6f8fa;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    h2 {
        text-align: center;
        margin-top: 35px;
        margin-bottom: 22px;
        font-weight: 700;
        color: #1e293b;
        letter-spacing: 1px;
    }

    .alert {
        width: 70%;
        margin: 14px auto 0 auto;
        padding: 13px 25px;
        border-radius: 8px;
        font-size: 1.08rem;
        box-shadow: 0 2px 10px #0001;
    }

    .alert-success {
        background: #e6f9e9;
        color: #219150;
    }

    .alert-danger {
        background: #f9e8e8;
        color: #c10015;
    }

    .table {
        width: 95%;
        margin: 30px auto 48px auto;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 3px 24px #0001;
        border-collapse: separate;
        border-spacing: 0;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 14px 18px;
            text-align: center;
            font-size: 1.07rem;
            vertical-align: middle;
            border-bottom: 1px solid #ecedf2;
        }

        .table th {
            background: linear-gradient(90deg, #3b82f6 30%, #60a5fa 100%);
            color: #fff;
            font-weight: 600;
            font-size: 1.08rem;
            border-bottom: 3px solid #60a5fa;
            letter-spacing: 0.5px;
        }

        .table tbody tr:nth-child(even) {
            background: #f1f5f9;
        }

        .table tbody tr:hover {
            background: #e0ecfc;
        }

        .table img {
            border-radius: 7px;
            box-shadow: 0 1px 8px #0001;
            max-width: 62px;
            max-height: 62px;
        }

    .btn {
        border: none;
        border-radius: 7px;
        padding: 7px 18px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        box-shadow: 0 1px 5px #0001;
        transition: background .14s, color .14s;
    }

    .btn-danger {
        background: #ef4444;
        color: #fff;
    }

        .btn-danger:hover {
            background: #b91c1c;
            color: #fff;
        }

    .btn-success {
        background: #3b82f6;
        color: #fff;
        margin: 28px auto 0 auto;
        display: block;
        width: 180px;
        font-size: 1.11rem;
        padding: 11px 0;
        border-radius: 9px;
        font-weight: 600;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 7px #0001;
    }

        .btn-success:hover {
            background: #1e40af;
            color: #fff;
        }
</style>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<!-- Hiển thị tổng của các mục đã chọn -->
<div id="selectedTotal"
     style="text-align:right; margin-top:15px; font-size:1.1rem; font-weight:600;">
    Tổng giá trị: 0 VNĐ
</div>
@using (Html.BeginForm("ProceedToCheckout", "Cart", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <!-- Gắn data-price và data-qty để JS dễ tính tổng -->
                        <input type="checkbox"
                               name="selectedProductIds"
                               class="select-item"
                               value="@item.ProductId"
                               data-price="@item.Price"
                               data-qty="@item.Quantity" />
                    </td>
                    <td><img src="@item.ProductImage" alt="@item.ProductName" width="50" /></td>
                    <td>@item.ProductName</td>
                    <td>@(item.Price.ToString("N0")) VNĐ</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("N0")) VNĐ</td>
                    <td>
                        @using (Html.BeginForm("RemoveFromCart", "Cart", FormMethod.Post))
                        {
                            <input type="hidden" name="firebaseKey" value="@item.FirebaseKey" />
                            <button type="submit" class="btn btn-danger">Xóa</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Thanh toán</button>


}

@section Scripts {
    <script>
        // Hàm tính và cập nhật tổng
        function updateSelectedTotal() {
            var total = 0;
            document
                .querySelectorAll('input[name="selectedProductIds"]:checked')
                .forEach(function (cb) {
                    var price = parseFloat(cb.dataset.price) || 0;
                    var qty = parseInt(cb.dataset.qty, 10) || 0;
                    total += price * qty;
                });
            // format với phân cách hàng nghìn
            document.getElementById('selectedTotal').textContent =
                'Tổng giá trị: ' + total.toLocaleString() + ' VNĐ';
        }

        // Gắn sự kiện change vào tất cả checkbox
        document.querySelectorAll('input[name="selectedProductIds"]').forEach(function (cb) {
            cb.addEventListener('change', updateSelectedTotal);
        });

        // Tính ngay lần đầu load
        updateSelectedTotal();
    </script>
}
