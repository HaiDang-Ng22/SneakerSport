@model List<KeyValuePair<string, SneakerSportStore.Models.KhachHang>>

@{
    ViewBag.Title = "Danh sách khách hàng";
}

<style>
    body {
        background: #f6f8fa;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    h2 {
        text-align: center;
        margin-top: 30px;
        font-weight: 700;
        color: #1e293b;
        letter-spacing: 1px;
    }

    .alert {
        width: 75%;
        margin: 18px auto;
        padding: 15px 24px;
        border-radius: 10px;
        font-size: 1.1rem;
        box-shadow: 0 3px 12px #0001;
    }

    .alert-success {
        background: #e8f5e9;
        color: #2e7d32;
    }

    .alert-danger {
        background: #ffebee;
        color: #c62828;
    }

    .table {
        width: 92%;
        margin: 28px auto 45px auto;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 3px 24px #0002;
        border-collapse: separate;
        border-spacing: 0;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px 22px;
            text-align: left;
            font-size: 1.07rem;
            vertical-align: middle;
            border-bottom: 1px solid #ecedf2;
        }

        .table th {
            background: linear-gradient(90deg, #3b82f6 30%, #60a5fa 100%);
            color: #fff;
            font-weight: 600;
            font-size: 1.08rem;
            letter-spacing: 0.5px;
            border-bottom: 3px solid #60a5fa;
        }

        .table tr {
            transition: background 0.18s;
        }

        .table tbody tr:nth-child(even) {
            background: #f1f5f9;
        }

        .table tbody tr:hover {
            background: #e0ecfc;
        }
        .table td:last-child {
            min-width: 150px;
        }
    .btn {
        border: none;
        border-radius: 6px;
        padding: 7px 17px;
        font-size: .98rem;
        cursor: pointer;
        margin-right: 6px;
        transition: background .15s, box-shadow .15s;
        box-shadow: 0 1px 5px #0001;
    }
    .btn-primary {
        background: #3b82f6;
        color: #fff;
    }

        .btn-primary:hover {
            background: #1e40af;
        }
    .btn-danger {
        background: #ef4444;
        color: #fff;
    }

        .btn-danger:hover {
            background: #991b1b;
        }


    .search-container {
        display: flex;
        justify-content: center;
        margin: 25px auto;
        width: 92%;
        gap: 15px;
        flex-wrap: wrap;
    }

    .search-box {
        flex: 1;
        min-width: 250px;
        padding: 12px 20px;
        border-radius: 10px;
        border: 1px solid #d1d5db;
        font-size: 1.05rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .search-select {
        padding: 12px 15px;
        border-radius: 10px;
        border: 1px solid #d1d5db;
        font-size: 1.05rem;
        background: white;
        min-width: 180px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .search-button {
        padding: 12px 28px;
        background: #3b82f6;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-weight: 600;
        font-size: 1.05rem;
        transition: background 0.2s;
    }

        .search-button:hover {
            background: #2563eb;
        }
</style>
<h2>Danh sách khách hàng</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@using (Html.BeginForm("Index", "Customer", FormMethod.Get))
{
    <div class="search-container">
        <input type="text"
               class="search-box"
               name="searchString"
               placeholder="Tìm theo tên, email hoặc tên đăng nhập..."
               value="@ViewBag.CurrentSearch" />

        <select class="search-select" name="roleFilter">
            <option value="">Tất cả vai trò</option>
            <option value="user" @(ViewBag.CurrentRole == "user" ? "selected" : "")>Khách hàng</option>
            <option value="nhanvien" @(ViewBag.CurrentRole == "nhanvien" ? "selected" : "")>Nhân viên</option>
            <option value="giaohang" @(ViewBag.CurrentRole == "giaohang" ? "selected" : "")>Giao hàng</option>
            <option value="chamsockhachhang" @(ViewBag.CurrentRole == "chamsockhachhang" ? "selected" : "")>CSKH</option>
            <option value="kho" @(ViewBag.CurrentRole == "kho" ? "selected" : "")>Kho</option>
            <option value="ketoan" @(ViewBag.CurrentRole == "ketoan" ? "selected" : "")>Kế toán</option>
        </select>

        <button type="submit" class="search-button">
            Tìm kiếm
        </button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <p style="text-align:center; margin-top:40px; color:#888; font-size:1.13em;">
        @(ViewBag.HasSearch ? "Không tìm thấy kết quả phù hợp" : "Không có khách hàng nào.")
    </p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Tên đăng nhập</th>
                <th>Vai trò</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var id = item.Key;
                var kh = item.Value;

                if (kh.UserRole != "Admin")
                {
                    <tr>
                        <td>@kh.HoTen</td>
                        <td>@kh.Email</td>
                        <td>@kh.SoDienThoai</td>
                        <td>@kh.TenDangNhap</td>
                        <td>@kh.UserRole</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Customer", new { id = id })">Chi tiết</a>
                            @if (Session["UserRole"]?.ToString() == "Admin")
                            {
                                using (Html.BeginForm("Delete", "Customer", FormMethod.Post, new { onsubmit = "return confirm('Bạn có chắc muốn xóa tài khoản này?');", style = "display:inline-block;" }))
                                {
                                    @Html.Hidden("id", id)
                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                }
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
