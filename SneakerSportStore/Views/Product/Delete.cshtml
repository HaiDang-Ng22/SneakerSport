@using (Html.BeginForm("DeleteConfirmed", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Tên Giày:</label>
        <strong>@Model.TenGiay</strong>
    </div>

    <div class="form-group">
        <label>Giá:</label>
        <strong>@String.Format("{0:N0}", Model.Gia) VND</strong>
    </div>

    <div class="form-group">
        <label>Mô Tả:</label>
        <strong>@Model.MoTa</strong>
    </div>

    <div class="form-group">
        <label>Số Lượng:</label>
        <strong>@Model.SoLuongTon</strong>
    </div>

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
}
