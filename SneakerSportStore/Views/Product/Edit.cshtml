@model SneakerSportStore.Models.Giay

@{
    ViewBag.Title = "Chỉnh sửa sản phẩm";
}

<h2>Chỉnh sửa sản phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Tên Giày</label>
        @Html.TextBoxFor(m => m.TenGiay, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Giá</label>
        @Html.TextBoxFor(m => m.Gia, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        <label>Số Lượng</label>
        @Html.TextBoxFor(m => m.SoLuongTon, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        <label>Mô Tả</label>
        @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Hình Ảnh</label>
        @Html.TextBoxFor(m => m.HinhAnh, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
}
