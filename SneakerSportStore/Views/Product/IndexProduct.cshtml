@model List<SneakerSportStore.Models.Giay>
@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<link href="~/Content/IndexProduct.css" rel="stylesheet" />

<h2>Danh sách sản phẩm</h2>

<div style="margin-top:20px;">
    <a href="@Url.Action("Create", "Product")" class="btn btn-primary">➕ Thêm sản phẩm mới</a>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped mt-4">
        <thead>
            <tr>
                <th>Tên giày</th>
                <th>Giá</th>
                <th>Mô tả</th>
                <th>Hình ảnh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenGiay</td>
                    <td>@String.Format("{0:N0}", item.Gia) VNĐ</td>
                    <td>@item.MoTa</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.HinhAnh))
                        {
                            <img src="@item.HinhAnh" alt="Ảnh giày" style="width:80px;" />
                        }
                        else
                        {
                            <span>Không có ảnh</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Product", new { id = item.FirebaseKey })" class="btn btn-sm btn-warning">✏️ Sửa</a>
                        <a href="@Url.Action("Delete", "Product", new { id = item.FirebaseKey })" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">🗑️ Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted mt-3">Không có sản phẩm nào.</p>
}
