@{
    ViewBag.Title = "Đổi mật khẩu";
}
<h2>Đổi mật khẩu</h2>
@if (ViewBag.OtpSent != null && ViewBag.OtpSent == true)
{
    <p>Đã gửi mã OTP, vui lòng kiểm tra điện thoại của bạn.</p>
    <form method="post" action="@Url.Action("VerifyOtpAndReset", "Settings")">
        <input type="hidden" name="soDienThoai" value="@ViewBag.SoDienThoai" />

        <div>
            <label>Mã OTP:</label>
            <input type="text" name="otp" required class="form-control" />
        </div>

        <div>
            <label>Mật khẩu mới:</label>
            <input type="password" name="newPassword" required class="form-control" />
        </div>

        <div>
            <label>Nhập lại mật khẩu:</label>
            <input type="password" name="rePassword" required class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Đặt lại mật khẩu</button>
    </form>
}
else
{
    <form method="post" action="@Url.Action("ForgotPassword", "Settings")">
        <div>
            <label>Số điện thoại:</label>
            <input type="text" name="soDienThoai" required class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Lấy mã OTP</button>
    </form>
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}
