                    </div>-->
                    <!-- Đăng xuất -->
                    <li>@Html.ActionLink("Đăng xuất", "Logout", "Account", null, new { @class = "nav-link" })</li>
                }
                else
                {
                    <!-- Hiển thị nút Đăng nhập và Đăng ký nếu chưa đăng nhập -->
