@model List<SneakerSportStore.Models.DiscountCode>

<h2>Thông Tin Khuyến Mãi</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table>
    <tr>
        <th>Tên Mã Giảm Giá</th>
        <th>Điều Kiện</th>
        <th>Giảm Giá (%)</th>
        <th>Thời Gian Áp Dụng</th>
        <th>Trạng Thái</th>
        <th>Thao Tác</th>
    </tr>
    @foreach (var v in Model)
    {
        <tr>
            <td>@v.CodeName</td>
            <td>@v.Condition</td>
            <td>
                @(v.DiscountType == "percent" ? (v.DiscountValue + "%") : (v.DiscountValue.ToString("N0") + " VNĐ"))
            </td>
            <td>@v.StartDate - @v.EndDate</td>
            <td>@(v.IsPublic ? "Hiển Thị" : "Ẩn")</td>
            <td>
                <form action="@Url.Action("SaveDiscountCode", "Voucher")" method="post" style="display:inline;">
                    <input type="hidden" name="voucherId" value="@v.IdVoucher" />
                    <button type="submit">Lưu Mã</button>
                </form>
            </td>
        </tr>
    }
</table>
